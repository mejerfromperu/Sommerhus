@page
@model SommerhusHjemmeside.Pages.SommerHouse.GreateSommerHouseModel
@{
    ViewData["Title"] = "Greate Renting House";
}

<div class="row rounded-4 container my-2 p-2" style="width: 100%; background: whitesmoke;">
    <div class="col-4 justify-content-center">
        <h2>Sommerhus Preview</h2>
        <div class="card my-2 p-2 " style="width: 20em; background: whitesmoke;">
            <div>
                <div class="col-12 justify-content-center">
                <form method="post" enctype="multipart/form-data">
                    <input type="file" id="imageInput" onchange="displayImage(this)"/>
                    <img id="uploadedImage" src="#" alt="Uploaded Image" class="card-img-top rounded-2" style="width: 100%; height: 14em; justify-content: center;">
                    <input class="justify-content-center" type="submit" value="Upload Billede Fil"/>
                    </form>
                </div>
                <div class="card-subtitle my-2">
                    <h2>#lokation</h2>
                    <h3>#Pris</h3>
                </div>
                <div class="card-body text-black">
                    <ul>
                        <li>Beskrivelse:</li>
                        <p>#beskrivelse</p>
                    </ul>
                    <div class="d-flex justify-content-around text-white">
                        <a class="btn btn-outline-dark" style="background: #DEE50F; border: 2px dimgrey; width: 50%;">BESTIL</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-8 row">
        <h4 class=" d-flex justify-content-center">Sommer Hus Lokation</h4>
        <div class="col-8">
            <label>By</label><br />
            <input class="form-control" /><br />
        </div>
        <div class="col-4">
            <label>Post Nummer</label><br />
            <input class="form-control" /><br />
        </div>
        <div class="col-6">
            <label>Vej Navn</label><br />
            <input class="form-control" /><br />
        </div>
        <div class="col-3">
            <label>Vej Nr.</label><br />
            <input class="form-control" /><br />
        </div>
        <div class="col-3">
            <label>Etage</label><br />
            <input class="form-control" /><br />
        </div>
        <div class="row d-flex">
            <div class="col-6">
                <h4 class="d-flex justify-content-center">Pris Pr. Dag</h4>
                <div class="col-12">
                    <label>Pris Kr.</label>
                    <input class="form-control"/><br />
                </div>
                <h4 class="d-flex justify-content-center">Beskrivelse</h4>
                <div class="col-12">
                    <label>Beskrivelse</label>
                    <input class="form-control"/><br />
                </div>
            </div>
        <div class="col-6">
                <h4 class="d-flex justify-content-center" >Udlejning periode</h4>
            <div class="col-12 row d-flex-inline justify-content-center">
                <div class="col-6 justify-content-around">
                    <label>Dato Fra</label><br/>
                    <input type="date" name="fromDate">
                </div>
                <div class="col-6 justify-content-around">
                    <label>Dato Til</label><br/>
                    <input type="date" name="toDate">
                </div>
            </div>
        </div>
        </div>
    </div>
</div>



<script>
    function displayImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('uploadedImage').src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
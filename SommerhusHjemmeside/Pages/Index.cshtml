@page
@model IndexModel
@{
    ViewData["Title"] = "";
}


<div class="row justify-content-evenly gap-5">
    <div class="card my-2 p-2" style="width: 20em; height: 32em; background: whitesmoke;">
        <div>
            <div class="col-12 justify-content-center">
                <img class="card-img-top rounded-2" src="~/css/image/sommer&solimg.jpg" class="card-img-top rounded-2" style="width: 100%; height: 14em; justify-content: center;">

            </div>
            <div class="card-subtitle my-2">
                <h2 id="outputLocation"></h2>
                <h4 id="outputPrice"></h4>
            </div>

            <div class="card-body text-black">
                <h5>Beskrivelse:</h5>
                <p id="outputText"></p>
                <div class="d-flex justify-content-around text-white">
                    <a class="btn btn-outline-dark rounded-pill" style="background: #DEE50F; border: 2px dimgrey; width: 50%;">BESTIL</a>
                </div>
            </div>
        </div>
    </div>

</div>